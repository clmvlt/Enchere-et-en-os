<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetAP.Vues.VuesEncheres.UneEnchereFlashVue"
             Title="UneEnchereFlashVue">
    <ScrollView Margin="0,30,0,0">
        <VerticalStackLayout Margin="30">
            <FlexLayout WidthRequest="500" HeightRequest="500">
                <Image Source="{Binding Enchere.LeProduit.Photo}" Margin="0, 0, 0, 0" WidthRequest="500" HeightRequest="500" HorizontalOptions="Center"/>
                <BoxView WidthRequest="150" HeightRequest="150" Color="Black" Margin="0, 0, 0, 0"/>
                <BoxView WidthRequest="150" HeightRequest="150" Color="Red" Margin="200, 0, 0, 0"/>
                <BoxView WidthRequest="150" HeightRequest="150" Color="Green" Margin="200, 0, 0, 0"/>
                <BoxView WidthRequest="150" HeightRequest="150" Color="Yellow" Margin="200, 0, 0, 0"/>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>