<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetAP.Vues.AccueilVue"
             Title="AccueilVue">
    <VerticalStackLayout>
        <Label Margin="0, 60, 0, 30" Text="{Binding  User.Pseudo, StringFormat='Connecté en tant que {0}'}"/>

        <Button Text="Enchères classiques" x:Name="btnAffichageEncheresClassiques" Clicked="btnAffichageEncheresClassiques_Clicked"/>
        <Button Text="Enchères inversées" x:Name="btnAffichageEncheresInversees"/>
        <Button Text="Enchères mystères" x:Name="btnAffichageEncheresMysteres"/>
        <Button Margin="0, 60, 0, 0" Text="Déconnexion" x:Name="btnLogout" Clicked="btnLogout_Clicked" BackgroundColor="Red"/>
    </VerticalStackLayout>
</ContentPage>