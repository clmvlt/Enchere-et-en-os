<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetAP.Vues.AccueilVue"
             Title="AccueilVue">
    <VerticalStackLayout>
        <Grid RowDefinitions="*, *, *, *, *" ColumnDefinitions="*">
            <Label Grid.ColumnSpan="1" Margin="0, 60, 0, 30" Text="{Binding  User.Pseudo, StringFormat='Connecté en tant que {0}'}"/>
            <Button Grid.Row="1" Grid.ColumnSpan="1" Text="Enchères classiques" x:Name="btnAffichageEncheresClassiques" Clicked="btnAffichageEncheresClassiques_Clicked"/>
            <Button Grid.Row="2" Grid.ColumnSpan="1" Text="Enchères inversées" x:Name="btnAffichageEncheresInversees" Clicked="btnAffichageEncheresInversees_Clicked"/>
            <Button Grid.Row="3" Grid.ColumnSpan="1" Text="Enchères mystères" x:Name="btnAffichageEncheresMysteres"/>
            <Button Grid.Row="4" Grid.ColumnSpan="1" Margin="0, 60, 0, 0" Text="Déconnexion" x:Name="btnLogout" Clicked="btnLogout_Clicked" BackgroundColor="Red"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>